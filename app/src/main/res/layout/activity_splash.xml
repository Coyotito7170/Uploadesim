<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/mTvAppName"
        android:layout_width="384dp"
        android:layout_height="154dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/bangers"
        android:text="Upload eSim+"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/mProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mTvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="357dp"
        android:fontFamily="@font/antic"
        android:text="world's best simless app"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mProgressBar" />

    <ProgressBar
        android:id="@+id/mProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="298dp"
        android:layout_height="12dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="60dp"
        android:background="#151515"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorWhite"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/mTvDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mTvAppName"
        app:layout_goneMarginEnd="70dp"
        app:layout_goneMarginStart="70dp" />

</androidx.constraintlayout.widget.ConstraintLayout>