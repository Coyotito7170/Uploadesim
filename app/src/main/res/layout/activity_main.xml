<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mTvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="322dp"
        android:text="Welcome to upload+"
        android:textColor="@color/colorBlack"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/mTvIntro"
        android:layout_width="405dp"
        android:layout_height="99dp"
        android:gravity="center|center_vertical"
        android:padding="21dp"
        android:text="Touch the future and enjoy a fast and secure connection with family and frinds with a cardless technology!"
        android:textColor="@color/colorBlack"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/mTvWelcome"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/mTvWelcome"
        app:layout_constraintTop_toBottomOf="@+id/mTvWelcome" />

    <Button
        android:id="@+id/mBtnGetStarted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_bg"
        android:text="GET STARTED"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:backgroundTint="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="@+id/mTvIntro"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mTvIntro"
        app:layout_constraintTop_toBottomOf="@+id/mTvIntro" />

    <TextView
        android:id="@+id/alreadyHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:shadowColor="@color/colorWhite"
        android:text="Already Have an Account?"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mBtnGetStarted"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintStart_toStartOf="@+id/mBtnGetStarted"
        app:layout_constraintTop_toBottomOf="@+id/mBtnGetStarted" />

    <TextView
        android:id="@+id/mTvSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:text="Sign in"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/alreadyHaveAccount"
        app:layout_constraintEnd_toEndOf="@+id/mBtnGetStarted"
        app:layout_constraintTop_toBottomOf="@+id/mBtnGetStarted"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>